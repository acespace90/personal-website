---
layout: 'base.njk'
contentType: article
---

<div class="o-small-container u-mt-space-2xl">
  <div class="o-paper">
    <h1>{{ title }}</h1>
    <div class="metadata">
      <p>
        Postato il <time datetime="{{ date | postDate }}">{{ date | postDate }}</time> in 
        {% for item in tag %}<span class="o-tag">{{ item }}</span>{% endfor %}
      </p>
    </div>
  </div>
  <div class="o-paper c-paper">
    {{ content | safe }}
  </div>
</div>
---
layout: 'base.njk'
contentType: article
permalink: "/blog/{{ title | slugify }}/"
---

<div class="o-small-container u-mt-space-2xl">
  <div class="o-paper">
    <h1>{{ title }}</h1>
    <ul>
  </ul>
    <div class="metadata">
      <p>
        Postato il <time datetime="{{ date | dateShort}}">{{ date | dateMed }}</time> in 
        {% for tag in tags | filterTagList %}
        <span class="o-tag"><a href="/blog/tag/{{ tag | slugify }}">{{ tag }}</a></span>
        {% endfor %}
      </p>
    </div>
  </div>
  <div class="o-paper c-paper">
    {{ content | safe }}
  </div>
</div>
<article class="c-post">
  <a href="{{ item.url }}" class="c-post__click-area"></a>
  <h3 class="c-post__title">{{ item.data.title }}</h3>
  <p class="c-post__date">{{ item.data.datePost | postDate }}</p>
  <p class="c-post__tags">{{ item.data.tags }}</p>
  <p class="c-post__abstract">{{ item.data.abstract }}</p>
</article>